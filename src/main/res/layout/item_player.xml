<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/player_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_default_photo"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/player_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Player name" />

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="Edit Player"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="Delete Player"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/update_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_update"
        android:contentDescription="Update Player"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
