<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/player_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/player_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:text="Stats" />

    <!-- Batting Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <Button android:id="@+id/btn_run_0" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="0" />
        <Button android:id="@+id/btn_run_1" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="1" />
        <Button android:id="@+id/btn_run_2" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="2" />
        <Button android:id="@+id/btn_run_3" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="3" />
        <Button android:id="@+id/btn_run_4" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="4" />
        <Button android:id="@+id/btn_run_6" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="6" />
        <Button android:id="@+id/btn_wicket" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Wicket" />
    </LinearLayout>

    <!-- Fielding Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_catch" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Catch" />
        <Button android:id="@+id/btn_run_out" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Run Out" />
    </LinearLayout>
</LinearLayout>
